<%= render :partial => 'admin/shared/configuration_menu' %>

<h1><%= t('edit_xero_settings') %></h1>

<%= form_tag(admin_xero_settings_path, :method => :put) do %>

  <p>
	<label><%= t("consumer_key") %></label>
	<%= text_field_tag('preferences[xero_consumer_key]', Spree::Config[:xero_consumer_key]) %>
  </p>
  <p>
	<label><%= t("consumer_secret") %></label>
	<%= text_field_tag('preferences[xero_consumer_secret]', Spree::Config[:xero_consumer_secret]) %>
  </p>
  <p class="form-buttons">
    <%= button t('update') %>
    <%= t("or") %> <%= link_to t("cancel"), admin_xero_settings_url %>
  </p>
<% end %>
